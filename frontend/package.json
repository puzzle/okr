{
  "name": "frontend",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:staging": "ng build --configuration staging",
    "watch": "ng build --watch --configuration development",
    "watch:prod": "ng build --watch",
    "test": "jest --silent --runInBand",
    "prestart": "cp scripts/pre-commit ../.git/hooks/ && chmod +x ../.git/hooks/pre-commit && echo 'hook copied'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome",
    "cypress:run:file": "cypress run --browser chrome --spec",
    "cypress:open-test": "concurrently \"npm start\" \"cypress open\"",
    "cypress:run-test": "npm run build && concurrently \"npm run serve:dist\" \"cypress run\"",
    "e2e": "ng e2e",
    "format:all": "npm run lint:format && npm run prettier:lint:format",
    "check-linting:all": "npm run lint && npm run prettier:lint",
    "lint:format:specific": "eslint --fix  --no-warn-ignored",
    "lint:format": "eslint --fix .",
    "lint": "eslint .",
    "prettier:lint:format:specific": "prettier --write ",
    "prettier:lint:format": "prettier --write .",
    "prettier:lint": "prettier --check ."
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.1.7",
    "@angular/router": "^20.0.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "angular-oauth2-oidc": "^20.0.2",
    "bootstrap": "^5.3.3",
    "ngx-toastr": "^19.0.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.6",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular/cli": "~20.1.6",
    "@angular/compiler-cli": "^20.1.7",
    "@cypress/schematic": "^4.0.0",
    "@cypress/skip-test": "^2.6.1",
    "@eslint/js": "^9.17.0",
    "@html-eslint/eslint-plugin": "^0.45.0",
    "@html-eslint/parser": "^0.45.0",
    "@stylistic/eslint-plugin": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "angular-eslint": "20.1.1",
    "browserslist": "^4.24.3",
    "cypress": "^15.0.0",
    "cypress-real-events": "^1.13.0",
    "eslint": "^9.17.0",
    "eslint-plugin-check-file": "^3.0.0",
    "eslint-plugin-i18n-json": "^4.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.4.2",
    "ngx-translate-testing": "^7.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.42.0",
    "uuid": "^11.0.3"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ]
  },
  "engines": {
    "npm": ">=10.0.0 <12.0.0",
    "node": "^20.19.0 || ^22.12.0 || ^24.0.0"
  }
}
